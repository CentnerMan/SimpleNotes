<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.preferences.PreferencesFragment">

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="@string/notes_text_font_name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Наименование" />

        <EditText
            android:id="@+id/text_font_param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Параметр" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="@string/notes_text_font_size_name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Наименование" />

        <EditText
            android:id="@+id/text_font_size_param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:inputType="number"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Параметр" />

    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:text="@string/notes_text_background_color_name"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Наименование" />

        <EditText
            android:id="@+id/text_background_color_param"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/small_margin"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Параметр" />

    </TableRow>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/preferences_ok_btn"
        android:text="@string/preferences_ok_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/preferences_cancel_btn"
        android:text="@string/preferences_cancel_btn" />

</TableLayout>